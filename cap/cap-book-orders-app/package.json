{
    "name": "cap-book-orders-app",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@sap/cds": "^6",
        "@sap/xssec": "^3",
        "express": "^4",
        "hdb": "^0.19.5",
        "passport": "^0"
    },
    "devDependencies": {
        "@sap/ux-specification": "^1.102.17",
        "rimraf": "^3.0.2",
        "sqlite3": "^5.0.4"
    },
    "scripts": {
        "start": "cds run",
        "watch-bookorderui": "cds watch --open bookorderui/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy cap-book-orders-app --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "requires": {
            "[production]": {
                "db": {
                    "kind": "hana-cloud"
                },
                "auth": {
                    "kind": "xsuaa"
                }
            },
            "db": {
                "kind": "sql"
            },
            "hana": {
                "deploy-format": "hdbtable"
            }
        }
    },
    "sapux": [
        "app/bookorderui"
    ]
}
